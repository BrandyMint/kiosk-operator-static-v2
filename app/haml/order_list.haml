                      %td.project-title
                        %a{href: '#'}
                          Кольцо NATALIA BRYANTSEVA (размер: 18)
                      %td.project-people
                        %img.img-circle{src: 'http://thumbor.kiiiosk.ru/unsafe/32x32/http://assets.kiiiosk.ru/uploads/product_image/image/7871/e029f2bd-8b3d-46e0-a018-7f2cd6430771.jpg'}
                      %td.project-title
                        .m-t-xs.m-b-xs
                          %span.label.label-default{title: 'Самовывоз', tooltip: true} Не требуется
                    %tr
                      %td.project-status
                        != '#1208'
                        %br
                        %small.text-muted
                          %nobr 03 мая, 23:57
                      %td.project-title
                        %a{href: '#'} 
                          2 230 руб.
                          %i.fa.fa-money
                        .m-t-xs.m-b-xs
